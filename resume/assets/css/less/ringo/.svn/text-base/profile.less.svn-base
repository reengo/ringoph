ul.profiles-segment{
	list-style: none;
	margin:0;
		li{
		display:inline-block;
		margin:0 1px;
	}
}
p.profiles-segment{
	text-align: right;
	width:100%;
}

.invited-block{
	button{margin-bottom:20px;}
	ul{margin-bottom:10px;}
	padding:10px 0;
}

.cost-block{	
	background:@whiteDarker - #010101;
	margin:10px 0 20px 0 !important;
	border:1px solid @grayLighterMod - #060606;	
	header{
		background:@whiteMoreDarker - #040404;
		h5{
			padding:10px;
			margin:0;
			color:@grayLightest + #080808;
		}
	}
	h4{
		font-size:@fontSizeLarge * 2;
		text-align: center;
	}
}

