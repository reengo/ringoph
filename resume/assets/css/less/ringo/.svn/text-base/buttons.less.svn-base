.btn{
	font-family:@montserratFontFamily;
	font-weight: normal;
} 
.input-append button{border-radius:0 !important;}
button.btn-navbar[data-toggle="collapse"]{
	margin:15px
}
.btn-twin{
	padding: 5px 50px;
	font-size: 14px;
	-webkit-border-radius: 0;
	 -moz-border-radius: 0;
	      border-radius: 0;
	margin:0;
}

.btn-large {
	padding: 15px 19px;
	font-size: 24px;
	-webkit-border-radius: 0;
	 -moz-border-radius: 0;
	      border-radius: 0;
}

.btn-create-trip{
	color:@greenDark;
}
.btn-share-trip{
	color:@white;
	background:rgba(0, 0, 0, 0.7);
	.border-radius(0);
	border:none;
	margin:10px 0;
	text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
	i{color:#e45b1f;}
}

.btn-big-orange{
	color:@ponkanDark;
	background:@ponkan;
	.border-radius(5px);
	margin:10px 0;
	color:@white;
	text-shadow: 0 1px 0 rgba(255, 255, 255, 0.25);
}
.btn-big-orange:hover,
.btn-big-orange:focus,
.btn-big-orange:active,
.btn-big-orange.active,
.btn-big-orange.disabled,
.btn-big-orange[disabled] {
	color: @ponkanDark;
	background-color: @ponkan + #111;
	*background-color: @ponkan  + #111;
}

.btn-big-orange:active,
.btn-big-orange.active {
	background-color: #ec601c \9;
}

button.btn-add{
	border:1px dashed @grayLight;
}