/* BF exclusive icons */
.icon-bf{
	padding:2px 14px;
	width:29px;
	height:29px;
	margin:0 5px 0 0;
	background:url(@iconModPath) no-repeat;
}
.icon-bf-plan{background-position:0 0;}
.icon-bf-book{background-position:-29px 0}
.icon-bf-share{background-position:-58px 0}

.icon-bg-circle{
	.border-radius(500px);
	margin:0 10px 0 0;
	padding: 5px 8px;
	background:@grayLighter - #222;
	box-shadow: 0 -1px 0 rgba(0, 0, 0, .3);
}

.icon-notification a i{
	color:@black;
	font-size:20px;
	text-shadow: 0 1px 0 rgba(255, 255, 255, 0.1);
	margin:10px 0;
	i{
		position:absolute;
		color:#bb0000;
		font-size:17px;
		right: 1px;
		top: -10px;
		span{
			position:absolute;
			color:#fff;
			font-size: @fontSizeMini;
			top: 0;
			left: 2px;
			width: 20px;
			text-align: center;
		}
	}
}
/* removes the active styles on nav */
.navbar-inverse .nav li.dropdown.open>.dropdown-toggle, .navbar-inverse .nav li.dropdown.active>.dropdown-toggle, .navbar-inverse .nav li.dropdown.open.active>.dropdown-toggle{
	background:none;
}